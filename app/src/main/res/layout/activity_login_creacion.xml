<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".LoginCreacionActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/create_account_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingRight="16dp">

            <EditText
                android:id="@+id/full_name"
                style="@style/EditTextStyle"
                android:hint="Nombre completo"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/username"
                style="@style/EditTextStyle"
                android:hint="Nombre de usuario"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/password"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña (mín. 8 caracteres, 3 numericos)"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/repeat_password"
                style="@style/EditTextStyle"
                android:hint="Repite la Contraseña"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/birthday"
                style="@style/EditTextStyle"
                android:focusable="false"
                android:hint="Nacimiento (MM/DD/YYYY)"
                android:inputType="date" />


            <EditText
                android:id="@+id/phone"
                style="@style/EditTextStyle"
                android:hint="Movil"
                android:inputType="phone" />

            <EditText
                android:id="@+id/email"
                style="@style/EditTextStyle"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:text="¿Lejos de la ciudad? ¡No hay problema! "
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/create_account_button"
                style="@style/ButtonMain"
                android:text="Crear Cuenta"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iconodelivery2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/delivery2" />

                <ImageView
                    android:id="@+id/iconodelivery3"
                    android:layout_width="213dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/delivery3" />
            </LinearLayout>

         </LinearLayout>


    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>
