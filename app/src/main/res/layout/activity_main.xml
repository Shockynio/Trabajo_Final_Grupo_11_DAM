<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orangeINTENSE"
    tools:context=".MainLoginActivity">

    <TextView
        android:id="@+id/tv_sing_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="@string/textBienvenida"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sing_in"
        android:layout_margin="10dp"
        android:background="#30ffffff"
        android:drawablePadding="20dp"
        android:hint="@string/hintEmail"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sing_in"
        android:drawableStart="@drawable/ic_baseline_alternate_email_24"
        android:autofillHints="false"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/et_contraseña"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_email"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#30ffffff"
        android:drawablePadding="20dp"
        android:hint="@string/hintContraseña"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_email"
        android:drawableStart="@drawable/ic_baseline_disabled_visible_24"
        android:inputType="textPassword"
        android:autofillHints="false"/>

    <Button
        android:id="@+id/btn_iniciar"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_contraseña"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_background"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:text="@string/textInicio" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_contraseña_olvidada"
        android:layout_below="@id/btn_iniciar"
        android:text="@string/textPreguntaContraseña"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/tv_linea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_contraseña_olvidada"
        android:layout_marginTop="-45dp"
        android:gravity="center"
        android:text="@string/lineaSeparacion"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_crear_cuenta"
        android:layout_width="145dp"
        android:layout_height="37dp"
        android:layout_below="@+id/tv_linea"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:background="#793CE4"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:backgroundTintMode="src_over"
        android:gravity="center"
        android:text="@string/textCrearCuentaNueva"
        android:textAllCaps="false"
        android:textColor="@color/white"
        tools:visibility="visible" />


    <Button
        android:id="@+id/btn_solicitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_crear_cuenta"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:backgroundTint="@color/colorAccent"
        android:gravity="center"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:text="@string/textSolicitud" />

</RelativeLayout>