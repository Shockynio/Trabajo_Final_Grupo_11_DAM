<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/txtProdu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRAdius="5dp">

    <LinearLayout
        android:layout_width="397dp"
        android:layout_height="273dp"
        android:orientation="vertical">

        <!-- Media -->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:contentDescription=""
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/comida" />

        <LinearLayout
            android:id="@+id/txtPrecio"
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title, secondary and supporting text -->

            <TextView
                android:id="@+id/textProductoCarta"
                android:layout_width="345dp"
                android:layout_height="42dp"
                android:text="@string/textRestauranteProducto" />

            <TextView
                android:id="@+id/txtPrecioCarta"
                android:layout_width="346dp"
                android:layout_height="40dp"
                android:text="@string/textRestaurantePrecio" />

        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="AÃ±adir al carrito" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>